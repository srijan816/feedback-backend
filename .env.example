# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/debate_feedback
DB_HOST=localhost
DB_PORT=5432
DB_NAME=debate_feedback
DB_USER=debate_user
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRY=30d

# File Storage
STORAGE_PATH=/var/storage/debate-recordings
MAX_UPLOAD_SIZE_MB=100
ALLOWED_AUDIO_FORMATS=m4a,aac,mp3,wav

# Google Drive
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id
GOOGLE_DRIVE_CREDENTIALS_PATH=./config/google-credentials.json

# Google Cloud Service Account
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_PROJECT_ID=your-gcp-project-id

# AssemblyAI API (for transcription with Slam-1)
ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# Google Gemini API (multiple keys for load balancing)
GEMINI_API_KEY_1=your-gemini-api-key-1
GEMINI_API_KEY_2=your-gemini-api-key-2
GEMINI_API_KEY_3=your-gemini-api-key-3
GEMINI_API_KEY_4=your-gemini-api-key-4
GEMINI_MODEL_FLASH=gemini-2.0-flash-exp
GEMINI_MODEL_PRO=gemini-2.0-flash-thinking-exp-01-21

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Grok API (X.AI)
GROK_API_KEY=your-grok-api-key
GROK_MODEL=grok-beta
GROK_API_URL=https://api.x.ai/v1

# LLM Provider Configuration
DEFAULT_LLM_PROVIDER=gemini_flash
LLM_TEMPERATURE=0.4
LLM_MAX_TOKENS=8192

# Processing Configuration
STORAGE_CLEANUP_THRESHOLD=2
TRANSCRIPTION_TIMEOUT_MINUTES=5
FEEDBACK_TIMEOUT_MINUTES=10
MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=10

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Feature Flags
ENABLE_OFFLINE_MODE=false
ENABLE_VIDEO_RECORDING=false
ENABLE_PATTERN_ANALYSIS=false

# Institution
DEFAULT_INSTITUTION=capstone
